<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
"http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<bean id="triangle" class="Triangle">
		<property name="pointP" ref="pointA"></property>
		<property name="pointQ" ref="pointB"></property>
		<property name="PointR" ref="pointC"></property>
 	
	</bean>
	<bean id="pointA" class="Point">
		<property name="x" value="0"></property>
		<property name="y" value="0"></property>
	</bean>
	<bean id="pointB" class="Point">
		<property name="x" value="-20"></property>
		<property name="y" value="0"></property>
	</bean>
	<bean id="pointC" class="Point">
		<property name="x" value="0"></property>
		<property name="y" value="20"></property>
	</bean>
</beans>